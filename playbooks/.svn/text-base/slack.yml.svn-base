---
- name: Send notification message via Slack
  hosts: all

  tasks:
  - name: loadavg1
    command: cut -f1 -d" " /proc/loadavg
    register: loadavg_1
  - name: loadavg5
    command: cut -f2 -d" " /proc/loadavg
    register: loadavg_5
  - name: loadavg15
    command: cut -f3 -d" " /proc/loadavg
    register: loadavg_15

  - name: testslack
    local_action:
      module: slack
      token: T0546K0J2/B0DRMVB0F/Ij2VD0JqJmNoJtpVTEKTjDT3
#https://hooks.slack.com/services/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 
      username : " {{ inventory_hostname }} load increase "
      msg: "clusternode : {{ ansible_hostname }} memfree : {{ ansible_memfree_mb }} / {{ ansible_memtotal_mb }} swapfree : {{ ansible_swapfree_mb }} / {{ ansible_swaptotal_mb }} loadavg : {{ loadavg_1.stdout }} {{ loadavg_5.stdout }} {{ loadavg_15.stdout }}"
    when: loadavg_1.stdout > loadavg_5.stdout

